#!/bin/bash
# data_extraction_automation-0x01
# Extracts name, height, weight, and type from data.json and formats output

DATA_FILE="data.json"

# Extract values from JSON
name=$(jq -r '.name' "$DATA_FILE" | sed 's/.*/\u&/') # Capitalize first letter
height=$(jq -r '.height' "$DATA_FILE")
weight=$(jq -r '.weight' "$DATA_FILE")
type=$(jq -r '.types[0].type.name' "$DATA_FILE" | sed 's/.*/\u&/')

# Convert height from decimetres to metres, weight from hectograms to kg
height_m=$(awk "BEGIN { printf \"%.1f\", $height / 10 }")
weight_kg=$(awk "BEGIN { printf \"%.0f\", $weight / 10 }")

# Print in required format
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."
